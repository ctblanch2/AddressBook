<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="mainFrame" class="MainFrame" init-method="init">
        <property name="title"><value>Address Book Viewer</value></property>
        <property name="components">
            <list>
                <ref bean="addBuddyPanel"></ref>
                <ref bean="bookDisplayPanel"></ref>
            </list>
        </property>
    </bean>

    <bean id="addBuddyPanel" class="BuddyPanel" init-method="init">
        <property name="book"><ref bean="addressBook"></ref></property>
    </bean>

    <bean id="bookDisplayPanel" class="AddressBookPanel" init-method="init">
        <property name="book"><ref bean="addressBook"></ref></property>
    </bean>

    <bean id="addressBook" class="app.model.AddressBook">
    </bean>

</beans>